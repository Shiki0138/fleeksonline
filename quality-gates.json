{
  "gates": [
    {
      "name": "test-coverage",
      "type": "coverage",
      "thresholds": {
        "statements": 80,
        "branches": 75,
        "functions": 80,
        "lines": 80
      },
      "required": true
    },
    {
      "name": "performance",
      "type": "performance",
      "thresholds": {
        "maxResponseTime": 1000,
        "maxMemoryUsage": 512,
        "maxCpuUsage": 80
      },
      "required": true
    },
    {
      "name": "security",
      "type": "security",
      "thresholds": {
        "vulnerabilities": 0,
        "securityScore": 85
      },
      "required": true
    },
    {
      "name": "test-results",
      "type": "test-results",
      "thresholds": {
        "passRate": 95,
        "maxFailures": 2
      },
      "required": true
    }
  ],
  "actions": {
    "onPass": [
      "proceed",
      "notify-success"
    ],
    "onFail": [
      "block",
      "notify-failure",
      "create-issue"
    ]
  }
}