# Server Configuration
PORT=3000
NODE_ENV=development
CLIENT_URL=http://localhost:3001

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/ai_community
REDIS_URL=redis://localhost:6379

# AI Services
OPENAI_API_KEY=your_openai_api_key_here

# Feature Flags
ENABLE_CONVERSATION_FACILITATOR=true
ENABLE_HEALTH_ANALYZER=true
ENABLE_PEER_MATCHING=true
ENABLE_GAMIFICATION=true
ENABLE_BEAUTY_ASSISTANT=true
ENABLE_CONTENT_SCHEDULER=true

# Conversation Facilitator Settings
TOXICITY_THRESHOLD=0.7
ENGAGEMENT_BOOST_THRESHOLD=0.3
TOPIC_DETECTION_CONFIDENCE=0.6

# Community Health Settings
HEALTH_ANALYSIS_INTERVAL=300000
HEALTH_THRESHOLD_CRITICAL=0.3
HEALTH_THRESHOLD_WARNING=0.5
HEALTH_THRESHOLD_HEALTHY=0.7
HEALTH_THRESHOLD_THRIVING=0.85

# Peer Matching Settings
MATCHING_INTERVAL=86400000
MIN_COMPATIBILITY_SCORE=0.7
MAX_MATCHES_PER_USER=5

# Gamification Settings
CHALLENGE_GENERATION_INTERVAL=86400000
REWARD_MULTIPLIER=1.2
MIN_CHALLENGE_PARTICIPANTS=3

# Content Scheduler Settings
ANALYSIS_WINDOW=2592000000
PREDICTION_HORIZON=604800000
MIN_DATA_POINTS=100
OPTIMIZATION_INTERVAL=3600000

# Security
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/ai-community.log

# External Services (Optional)
SENDGRID_API_KEY=your_sendgrid_key_here
AWS_ACCESS_KEY_ID=your_aws_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_here
AWS_REGION=us-east-1