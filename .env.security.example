# Security Configuration

# Session and Cookie Security
SESSION_SECRET=your-secure-session-secret-min-32-chars
COOKIE_SECRET=your-secure-cookie-secret-min-32-chars

# Zero Trust Configuration
ZERO_TRUST_THRESHOLD=0.7
ZERO_TRUST_CONTEXT_WEIGHTS={"location":0.2,"device":0.2,"behavior":0.3,"authentication":0.3}

# WebAuthn Configuration
WEBAUTHN_RP_NAME=Fleeks Security Platform
WEBAUTHN_RP_ID=localhost
WEBAUTHN_ORIGIN=http://localhost:3000

# Biometric Configuration
BIOMETRIC_ENCRYPTION_KEY=your-32-byte-biometric-encryption-key
BIOMETRIC_VERIFICATION_THRESHOLD={"face":0.95,"fingerprint":0.99,"voice":0.90,"iris":0.999,"palm":0.98}

# DRM Configuration
WIDEVINE_LICENSE_URL=https://license.widevine.com/cenc/getlicense
PLAYREADY_LICENSE_URL=https://license.playready.com/
FAIRPLAY_CERT_URL=https://fairplay.apple.com/certificate
FAIRPLAY_LICENSE_URL=https://fairplay.apple.com/license
FAIRPLAY_WRAPPING_KEY=your-fairplay-wrapping-key

# Privacy Analytics Configuration
PRIVACY_SALT=your-privacy-salt-for-anonymization
PRIVACY_EPSILON=1.0
PRIVACY_DELTA=0.00001
PRIVACY_K_ANONYMITY=5

# Anomaly Detection Configuration
ANOMALY_DETECTION_THRESHOLD=0.85
ANOMALY_WINDOW_SIZE=30
ANOMALY_RETENTION_DAYS=90

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3001

# Redis Configuration (for session store)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=fleeks_security
DB_USER=fleeks_user
DB_PASSWORD=secure_password

# JWT Configuration
JWT_SECRET=your-jwt-secret-min-32-chars
JWT_REFRESH_SECRET=your-jwt-refresh-secret-min-32-chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Security Headers
HSTS_MAX_AGE=31536000
CSP_REPORT_URI=https://your-domain.com/csp-report

# Logging
LOG_LEVEL=info
LOG_FILE=logs/security.log

# Environment
NODE_ENV=development
PORT=3000
HOST=localhost